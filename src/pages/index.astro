---
const redirectUrl = process.env.REDIRECT_URL ?? '';
const displayUrl = redirectUrl || 'REDIRECT_URL ikke satt';
---

<html lang="nb">
  <head>
    <meta charset="utf-8" />
    <title>Rapportering flyttet</title>
    <meta
      name="description"
      content="A11y-rapportering er flyttet til et nytt verktÃ¸y"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body
    style="min-height:100vh;margin:0;display:flex;align-items:center;justify-content:center;background:#f3f4f6;font-family:system-ui,-apple-system,BlinkMacSystemFont,'Segoe UI',sans-serif;text-align:center;"
  >
    <p style="font-size:1.25rem;color:#0b1d3a;">
      siden er flyttet til
      <a
        href={redirectUrl || '#'}
        style="color:#0f6fba;font-weight:600;"
      >
        {displayUrl}
      </a>
    </p>
  </body>
</html>
